@inject BLL.Law.LawPotentialityTypeFunctions lawPotentialityTypeFunctions

<div class="form-group">
    <label class="control-label">@translationFunctions.GetTranslation("Criticidade do Requisito Legal", User.FindFirstValue("CultureInfo"))</label>
    <select multiple="multiple" class="form-control ReportParameter" style="width: 100%;" data-hidden-parameter="CompanyLawPotentialityTypeExternalCode">
        @foreach (var item in lawPotentialityTypeFunctions.GetDataFiltered(x => x.IsActive).OrderBy(x => x.Order))
        {
            <option value="@item.ExternalCode">@translationFunctions.GetTranslation(item.Name, User.FindFirstValue("CultureInfo"))</option>
        }
    </select>
</div>