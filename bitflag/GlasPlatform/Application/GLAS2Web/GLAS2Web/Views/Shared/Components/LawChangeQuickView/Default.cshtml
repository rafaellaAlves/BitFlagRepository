@model List<DTO.Law.LawViewModel>

<div class="table-responsive">
    <table class="table table-bordered table-condensed table-striped">
        <thead>
            <tr>
                <td>Data da Alteração</td>
                <td>Requisito Legal</td>
                <td>Tipo</td>
                <td>Orgão</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderByDescending(x => x._ForceDate))
            {
                <tr>
                    <td>@item.ForceDate</td>
                    <td>@item._Number - @item.Title</td>
                    <td>@item.LawTypeName</td>
                    <td>@item.OrgaoName</td>
                </tr>
            }
            @if (Model.Count == 0) {
                <tr>
                    <td colspan="4" class="text-center">Nenhum item encontrado</td>
                </tr>
			}
        </tbody>
    </table>
</div>