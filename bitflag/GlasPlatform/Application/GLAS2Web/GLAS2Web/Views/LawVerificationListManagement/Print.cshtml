@model DTO.Law.LawVerificationListViewModel
@{
	ViewData["Title"] = "Obrigações do Requisito Legal";
}
<html lang="pt-br">
<head>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous" />

	<script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>

	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>

	<style>
		body {
			display: table;
			table-layout: fixed;
			padding-top: 2.5cm;
			padding-bottom: 2.5cm;
			height: auto;
		}
	</style>

</head>
<body>
	<div style="text-align:center;">
		Obrigações do Requisito Legal - <b>@Model.Description</b>
	</div>
	<input type="hidden" id="LawVerificationListId" name="LawVerificationListId" value="@Model.LawVerificationListId" />
	<input type="hidden" id="LawId" name="LawId" value="@Model.LawId" />
	<div class="row">
		<div class="col-md-12">
			<br>
			<table class="table table-condensed table-bordered table-striped">
				<thead>
					<tr>
						<th rowspan="2" style="vertical-align:middle;">Referência</th>
						<th style="width: 40%; vertical-align:middle;" rowspan="2">Quesitos do Requisito legal</th>
						<th colspan="3" style="vertical-align:middle; text-align:center;">Atendimento</th>
						<th rowspan="2" style="vertical-align:middle;">Observações: Tratativas / Evidências</th>
					</tr>
					<tr>
						<th style="vertical-align:middle;">Implementação</th>
						<th style="vertical-align:middle;">Ação Necessária?</th>
						<th style="vertical-align:middle;">Tipo Ação</th>
					</tr>
				</thead>
				<tbody id="tdata">
					@foreach (var item in (List<DAL.LawVerificationListItem>)ViewData["items"])
					{
						<tr>
							<td style="vertical-align:middle;">@item.Reference</td>
							<td style="vertical-align:middle;">@item.Description</td>
							<td></td>
							<td></td>
							<td></td>
							<td></td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
	<script type="text/javascript">
		window.print();
	</script>

</body>

</html>
