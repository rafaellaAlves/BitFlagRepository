@{
    var controllerName = ViewContext.RouteData.Values["controller"].ToString().ToUpper();
    var actionName = ViewContext.RouteData.Values["action"].ToString().ToUpper();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GuardMed </title>

    <link rel="stylesheet" href="~/css/bootstrap/bootstrap.css">
    <link href="~/theme/assets/css/style.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">


    <script src="~/js/jquery/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="~/js/bootstrap/bootstrap.js"></script>

    <!-- Jquery Mask -->
    <script src="https://igorescobar.github.io/jQuery-Mask-Plugin/js/jquery.mask.min.js"></script>

    <!--Select2-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

    <!--DataTable-->
    <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <!--Jquery UI-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.js"></script>

    <script src="https://cdn.es.gov.br/scripts/jquery/jquery-globalize/1.0.0/globalize.min.js"></script>
    <script src="https://cdn.es.gov.br/scripts/jquery/jquery-globalize/1.0.0/cultures/globalize.culture.pt-BR.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.4.0/bootbox.min.js" integrity="sha256-sfG8c9ILUB8EXQ5muswfjZsKICbRIJUG/kBogvvV5sY=" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">

    <!--MOMENT-->
    <script src="~/theme/assets/plugins/moment/min/moment.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

    <script src="~/js/site.js"></script>
    <link href="~/css/site.css" rel="stylesheet" />

    <script type="text/javascript">
        $(document).ajaxStart(function () {
            $("#loading").show();
        });
        $(document).ajaxStop(function () {
            $("#loading").hide();
        });

        function ShowLoading() {
            $("#loading").show();
        }
        function HideLoading() {
            $("#loading").hide();
        }
    </script>

    <style type="text/css">
        @@media print {
            page {
                margin: 0;
            }

            body {
                -webkit-print-color-adjust: exact;
                margin-top: -2em;
            }

            .no-print, .no-print * {
                display: none !important;
            }

            .page-break {
                page-break-after: always;
            }

            .smallFont {
                font-size: 10px;
            }

            .no-screen {
                display: block !important;
            }
        }

        .percent {
            display: inline !important;
            line-height: 21px !important;
            z-index: auto !important;
            font-weight: 400 !important;
            font-size: 11px !important;
            color: #212529 !important;
        }

        .nav-second-level {
            margin-left: 0em;
        }
    </style>


    <!-- HIGHCHARTS -->
    <script src="https://code.highcharts.com/highcharts.src.js"></script>
</head>
<body class="fixed-left">
    <div id="loading" style="display: none; z-index: 1060; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.6)">
        <img src="~/image/ajax-loading.svg" style="position: absolute; left: 50%; margin-left: -100px; top: 50%; margin-top: -100px;" />
    </div>

    <!-- Begin page -->
    <div id="wrapper">

        <!-- Top Bar Start -->
        <div class="topbar no-print">

            <!-- LOGO -->
            <div class="topbar-left">
                <img src="~/image/logoGuardMed.png" style="height:68px; margin-top:14px;" />
            </div>
            <div class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <!-- Page title -->
                    <ul class="nav navbar-nav list-inline navbar-left">
                        <li class="list-inline-item">
                            <button class="button-menu-mobile open-left">
                                <i class="fa fa-bars"></i>
                            </button>
                        </li>
                        <li class="list-inline-item">
                            <h4 class="page-title">@ViewData["Title"]</h4>
                        </li>
                    </ul>
                </div><!-- end container -->
            </div><!-- end navbar -->

        </div>
        <!-- Top Bar End -->
        <!-- ========== Left Sidebar Start ========== -->
        <div class="left side-menu no-print" style="overflow-y: auto;">
            <div class="sidebar-inner slimscrollleft">

                <!--- Sidemenu -->
                <div id="sidebar-menu">
                    <ul>
                        <li class="text-muted menu-title">
                            <hr />
                            Olá, @User.Identity.Name
                        </li>
                        <li><a href="@Url.Action("MyAccount", "Home")" class="waves-effect"><i class="fas fa-users"></i> Meus Dados</a></li>

                        <li>
                            <a href="#" class="waves-effect">
                                <i class="fas fa-shield-alt"></i>
                                <span> Blindagem Jurídica</span>
                                <span class="fa fa-chevron-down float-right"></span>
                            </a>
                            <ul class="nav-second-level" style="@(actionName.Equals("LEGAL") || actionName.Equals("PREVENTIVE") || actionName.Equals("ADVISOR")? "display:block;" : "display:none;")">
                                <li><a href="@Url.Action("Legal", "Home")" class="waves-effect @(actionName.Equals("LEGAL")? "active" : "")"><i class="fas fa-info"></i> Informações</a></li>
                                <li><a href="@Url.Action("Preventive", "Home")" class="waves-effect @(actionName.Equals("PREVENTIVE")? "active" : "")"><i class="fas fa-location-arrow"></i> Preventive/Advisor</a></li>
                                <li><a href="@Url.Action("Advisor", "Home")" class="waves-effect @(actionName.Equals("ADVISOR")? "active" : "")"><i class="fas fa-building"></i> Escritórios Parceiros</a></li>
                            </ul>
                        </li>

                        <li><a href="@Url.Action("Welfare", "Home")" class="waves-effect"><i class="fas fa-heartbeat"></i> Bem Estar</a></li>
                        <li><a href="@Url.Action("Benefits", "Home")" class="waves-effect"><i style="color: gold" class="fas fa-star"></i> Benefícios</a></li>
                        <li>
                            <a href="#" class="waves-effect">
                                <i class="fas fa-headset"></i>
                                <span>Contato/Sinistro</span>
                                <span class="fa fa-chevron-down float-right"></span>
                            </a>
                            <ul class="nav-second-level" style="@(actionName.Equals("CONTACT")? "display:block;" : "display:none;")">
                                <li><a href="https://api.whatsapp.com/send?phone=+551199566-3535" target="_blank" class="waves-effect"><i class="fab fa-whatsapp-square"></i> WhatsApp</a></li>
                                <li><a href="@Url.Action("Contact", "Home")" class="waves-effect @(actionName.Equals("CONTACT")? "active" : "")"><i class="fas fa-envelope"></i> Sinistro</a></li>
                            </ul>
                        </li>
                        <li><a href="@Url.Action("Logout", "Account")" class="waves-effect"><i class="fas fa-power-off"></i> Sair</a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <!-- Sidebar -->
                <div class="clearfix"></div>
            </div>
        </div>
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container-fluid">
                    @if (!string.IsNullOrWhiteSpace(Context.Request.Query["saved"]))
                    {
                        <text>
                            <div id="SavedData" class="alert alert-success fade show text-center">
                                <b>Os dados foram salvos com sucesso!</b>
                            </div>
                            <script type="text/javascript">
                                $('#SavedData').fadeOut(5000);
                            </script>
                        </text>
                    }
                    @RenderBody()

                </div> <!-- container -->

            </div> <!-- content -->

            <footer class="footer" style="line-height: normal; height: initial;">
                <div class="text-left">
                    GuardMed &copy; @DateTime.Now.Year <br />
                    <i class="fa fa-phone-square"></i> +55 11 3253-2284 | <i class="fab fa-whatsapp"></i> +55 11 99566-3535
                </div>
            </footer>

        </div>
    </div>
    <!-- END wrapper -->

    <script src="~/theme/assets/js/jquery.core.js"></script>
    <script src="~/theme/assets/js/jquery.app.js"></script>

    <!-- BOOTSTRAP DATEPICKER -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/js/bootstrap-datepicker.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/css/bootstrap-datepicker.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/locales/bootstrap-datepicker.pt-BR.min.js"></script>

    @RenderSection("Scripts", required: false)

    <script type="text/javascript">
        if (window.innerWidth < 420) {
            $.Sidemenu.openLeftBar();
        }
    </script>
</body>
</html>