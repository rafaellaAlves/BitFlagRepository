<script type="text/javascript">
    function AbrirGrupoModal(data) {
        
        if (data == null) {
            $('#ModalGrupoTitulo').text('Criação de Grupo Médico');
            $('#MedicGroupId').val('');
            $('#MedicGroupName').val('');
            $('#CNPJ').val('');
            $('#Discount').val('');
            $('#IsActive').val('true');
            $('#RevenuesFormId').val('');
            $('#CompanyPlatformId').val('');
            $('#PlatformAgency').val('');
            $('#PlatformLife').val('');
            $('#PlatformComission').val('');
            $('#CompanyOfficeId').val('');
            $('#OfficeAgency').val('');
            $('#OfficeLife').val('');
            $('#OfficeComission').val('');
        }
        else {
            $('#ModalGrupoTitulo').text('Edição do Grupo Médico: ' + data.medicGroupName);
            $('#MedicGroupId').val(data.medicGroupId);
            $('#MedicGroupName').val(data.medicGroupName);
            $('#CNPJ').val(data.cnpj);
            $('#Discount').val(data.discountFormatted).trigger('input');
            $('#IsActive').val((data.isActive ? 'true' : 'false'));
            $('#RevenuesFormId').val(data.revenuesFormId);
            $('#CompanyPlatformId').val(data.companyPlatformId);
            $('#PlatformAgency').val(data.platformAgencyFormatted).trigger('input');
            $('#PlatformLife').val(data.platformLifeFormatted).trigger('input');
            $('#PlatformComission').val(data.platformComissionFormatted).trigger('input');
            $('#CompanyOfficeId').val(data.companyOfficeId);
            $('#OfficeAgency').val(data.officeAgencyFormatted).trigger('input');
            $('#OfficeLife').val(data.officeLifeFormatted).trigger('input');
            $('#OfficeComission').val(data.officeComissionFormatted).trigger('input');

            if (data.companyOfficeId != null) {
                GetRealEstates(data.companyOfficeId);
            }
        }

        $('#GrupoMedicoModal').modal('show');
    }

    function GetRealEstates(companyOfficeId) {
        if (IsNullOrWhiteSpace($('#CompanyPlatformId').val())) {
            $('#CompanyOfficeId').empty();
            $('#CompanyOfficeId').append($('<option>', { value: '' }).append('Selecione uma Plataforma.'));
        } else {
            $.ajax({
                url: '@Url.Action("GetRealEstatesByRealEstateAgencyId", "Company")',
                type: 'POST',
                datatype: 'JSON',
                data: { id: $('#CompanyPlatformId').val() },
                success: function (data) {
                    $('#CompanyOfficeId').empty();
                    if (data == false || data.length == 0) {
                        $('#CompanyOfficeId').append($('<option>', { value: '' }).append('Nenhum escritório encontrado.'));
                    }
                    if (data.length > 0) {
                        $('#CompanyOfficeId').append($('<option>', { value: '' }).append('Selecione'));
                        for (var i = 0; i < data.length; i++) {
                            var companyName = IsNullOrWhiteSpace(data[i].razaoSocial) ? data[i].firstName + " " + data[i].lastName : data[i].razaoSocial;
                            var option = $('<option>', { value: data[i].companyId }).append(companyName);
                            $('#CompanyOfficeId').append(option);
                        }
                    }
                    if (companyOfficeId != null) $('#CompanyOfficeId').val(companyOfficeId);
                }
            });
        }
    }

    function ValidarGrupoMedico() {
        var temErro = false;
        $('#GrupoMedicoForm .text-danger').remove();
        $('#AlertaErro').hide();

        if (IsNullOrWhiteSpace($('#MedicGroupName').val())) {
            $('#MedicGroupName').after('<div class="text-danger">Insira um nome para o grupo médico.</div>');
            temErro = true;
        }
        if (IsNullOrWhiteSpace($('#CNPJ').val())) {
            $('#CNPJ').after('<div class="text-danger">Insira o CNPJ.</div>');
            temErro = true;
        }
        if (IsNullOrWhiteSpace($('#Discount').val())) {
            $('#AreaDiscount').after('<div class="text-danger">Insira o desconto.</div>');
            temErro = true;
        } else {
            var valor = $('#Discount').val();
            if (valor.indexOf(',') != -1)  valor = valor.replace(',', '.');

            if (parseFloat(valor) > 100) {
                $('#AreaDiscount').after('<div class="text-danger">O desconto deve ser inferior ou igual a 100%.</div>');
                temErro = true;
            }
            else if (parseFloat(valor) <= 0) {
                $('#AreaDiscount').after('<div class="text-danger">O desconto deve ser superior a 0%.</div>');
                temErro = true;
            }
        }

        // Obrigatoriedades para quando for desenvolvido o módulo financeiro

        // if (IsNullOrWhiteSpace($('#RevenuesFormId').val())) {
        //    $('#RevenuesFormId').after('<div class="text-danger">Insira a Forma de faturamento.</div>');
        //    temErro = true;
        //}

        //if (IsNullOrWhiteSpace($('#CompanyPlatformId').val())) {
        //    $('#CompanyPlatformId').after('<div class="text-danger">Selecione a Plataforma.</div>');
        //    temErro = true;
        //}

        //if (IsNullOrWhiteSpace($('#CompanyOfficeId').val())) {
        //    $('#CompanyOfficeId').after('<div class="text-danger">Selecione o Escritório.</div>');
        //    temErro = true;
        //}

        //if (IsNullOrWhiteSpace($('#PlatformAgency').val())) {
        //    $('#PlatformAgency').after('<div class="text-danger">Insira o Agenciamento.</div>');
        //    temErro = true;
        //}

        //if (IsNullOrWhiteSpace($('#PlatformLife').val())) {
        //    $('#PlatformLife').after('<div class="text-danger">Insira o Vitalício.</div>');
        //    temErro = true;
        //}
        //if (IsNullOrWhiteSpace($('#OfficeAgency').val())) {
        //    $('#OfficeAgency').after('<div class="text-danger">Insira o Agenciamento.</div>');
        //    temErro = true;
        //}
        //if (IsNullOrWhiteSpace($('#OfficeLife').val())) {
        //    $('#OfficeLife').after('<div class="text-danger">Insira o Vitalício.</div>');
        //    temErro = true;
        //}

        var vitalicioEscritorio = Globalize.parseFloat($('#OfficeLife').val());
        var vitalicioPlataforma = Globalize.parseFloat($('#PlatformLife').val());

        if (vitalicioEscritorio > vitalicioPlataforma) {
            alert('Vitalício máximo ultrapassado.');
            $('OfficeLife').val(" ");
            return false;
        }

        if (temErro) {
            $('#AlertaErro').show();
        }

        return !temErro;
    }

    function SalvarGrupoMedico() {
        var d = $('#GrupoMedicoForm').serializeArray();

        $.ajax({
            url: '@Url.Action("Gerenciar", "MedicGroup")',
            type: 'POST',
            datatype: 'JSON',
            data: d,
            success: function (data) {
                if (!data.temErro) {
                    $('#GrupoMedicoModal').modal('hide');
                    $('#MedicGroupListTable').DataTable().ajax.reload();
                    $('#AlertaSucesso').show();
                    var contador;

                    clearTimeout(contador);
                    contador = setTimeout(EsconderAlerta, 4000);

                    function EsconderAlerta() {
                        $('#AlertaSucesso').hide();
                    }
                }
                else {
                    alert(data.mensagem);
                }
            }
        });
    }

    // VERIFICAR E PREENCHER CAMPOS DE COMISSAO
    function VerificarAgenciamentoVitalicioPlataforma() {
        var agenciamentoPlataformaValor = $('#PlatformAgency').val();
        var vitalicioPlataformaValor = $('#PlatformLife').val();

        if (agenciamentoPlataformaValor != null && vitalicioPlataformaValor != null) {
            return true;
        }
        else {
            $('#PlatformAgency').val(0);
            $('#PlatformLife').val(0);
            $('#PlatformComission').val(0);
            alert('Campo de Agenciamento e Vitalício não se pode letra.');
            return false;
        }
    }

    function VerificarAgenciamentoVitalicioEscritorio() {
        var agenciamentoEscritorioValor = $('#OfficeAgency').val();
        var vitalicioEscritorioValor = $('#OfficeLife').val();

        if (agenciamentoEscritorioValor != null && vitalicioEscritorioValor != null) {
            return true;
        } else {
            $('#OfficeAgency').val(0);
            $('#OfficeLife').val(0);
            $('#OfficeComission').val(0);
            alert('Campo de Agenciamento e Vitalício não se pode letra.');
            return false;
        }
    }

    function ValorComissaoPlataforma() {
        var agenciamento = 0;
        var vitalicio = 0;

        if ($('#PlatformAgency').val()) {
            agenciamento = Globalize.parseFloat($('#PlatformAgency').val());
        }
        if ($('#PlatformLife').val()) {
            vitalicio = Globalize.parseFloat($('#PlatformLife').val());
        }
        var comissao = (agenciamento / 12) + (vitalicio * 11) / 12;

        if (comissao == null) comissao = 0;

        $('#PlatformComission').data('valor', comissao);
        $('#PlatformComission').val(comissao.toLocaleString('pt-BR', { maximumFractionDigits: 4 }));
    }

    function ValorComissaoEscritorio() {
        var agenciamento = 0;
        var vitalicio = 0;

        if ($('#OfficeAgency').val()) {
            agenciamento = Globalize.parseFloat($('#OfficeAgency').val());
        }
        if ($('#OfficeLife').val()) {
            vitalicio = Globalize.parseFloat($('#OfficeLife').val());
        }
        var comissao = (agenciamento / 12) + (vitalicio * 11) / 12;

        if (comissao == null) comissao = 0;

        $('#OfficeComission').data('valor', comissao);
        $('#OfficeComission').val(comissao.toLocaleString('pt-BR', { maximumFractionDigits: 4 }));
    }

    function VerificarValorMaximoPlataforma(sel) {
        $('.comissao-error').remove();

        var lastValue = $(sel).data('last-value');
        var agenciamentoPlataforma = Globalize.parseFloat($('#PlatformAgency').val());
        var vitalicioPlataforma = Globalize.parseFloat($('#PlatformLife').val());

        if (agenciamentoPlataforma < 0) {
            alert('Agenciamento não pode ser negativo.');
            $('#PlatformAgency').val(lastValue);
            return false;
        }
        if (agenciamentoPlataforma > 100) {
            alert('Agenciamento não pode ser maior que 100%.');
            $('#PlatformAgency').val(lastValue);
            return false;
        }

        if (vitalicioPlataforma < 0) {
            alert('Vitalício não pode ser negativo.');
            $('#PlatformLife').val(lastValue);
            return false;
        }
        if (vitalicioPlataforma > 100) {
            alert('Vitalício não pode ser maior que 100%.');
            $('#PlatformLife').val(lastValue);
            return false;
        }

        $(sel).data('last-value', $(sel).val());
        return true;

    }

    function VerificarValorMaximoEscritorio(sel) {
        var lastValue = $(sel).data('last-value');
        var agenciamentoEscritorio = Globalize.parseFloat($('#OfficeAgency').val());
        var vitalicioEscritorio = Globalize.parseFloat($('#OfficeLife').val());
        var vitalicioPlataforma = Globalize.parseFloat($('#PlatformLife').val());

        if (vitalicioEscritorio > vitalicioPlataforma) {
            alert('Vitalício máximo ultrapassado.');
            $('OfficeLife').val(" ");
            return false;
        }

        if (agenciamentoEscritorio < 0) {
            alert('Agenciamento não pode ser negativo.');
            $('#OfficeAgency').val(lastValue);
            return false;
        }
        if (agenciamentoEscritorio > 100) {
            alert('Agenciamento não pode ser maior que 100%.');
            $('#OfficeAgency').val(lastValue);
            return false;
        }

        if (vitalicioEscritorio < 0) {
            alert('Vitalício não pode ser negativo.');
            $('#OfficeLife').val(lastValue);
            return false;
        }
        if (vitalicioEscritorio > 100) {
            alert('Vitalício não pode ser maior que 100%.');
            $('#OfficeLife').val(lastValue);
            return false;
        }

        $(sel).data('last-value', $(sel).val());
        return true;
    }

    function ClearAllInputs() {
        $("#CRM").val("");
        $("#CRMEstado").val("");
        $("#Nome").val("");
        $("#CPF").val("");
        $("#Arquivo").val("");
    }
</script>
