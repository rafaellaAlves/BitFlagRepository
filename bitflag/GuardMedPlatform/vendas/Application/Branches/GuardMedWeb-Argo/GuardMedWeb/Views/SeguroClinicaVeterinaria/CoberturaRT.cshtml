<br />
<div class="form-group">
    <a href="@Url.Action("Formulario","SeguroClinicaVeterinaria")" id="VoltarButton" class="btn btn-secondary"><i class="fas fa-arrow-left"></i>&nbsp;Voltar</a>
    <button type="button" id="SkipButton" class="btn btn-secondary float-right">Pular&nbsp;<i class="fas fa-arrow-right"></i></button>
</div>

<script type="text/javascript">


    function LimparClasseDosCards() {
        $('#MaltesCard').removeClass('shadow bg-light');
        $('#BuldogCard').removeClass('shadow bg-light');
        $('#MastiffCard').removeClass('shadow bg-light');
    }

    $('#MaltesCard').click(function () {
        LimparClasseDosCards();
        $('#MaltesCard').addClass('shadow bg-light');
    });
    $('#BuldogCard').click(function () {
        LimparClasseDosCards();
        $('#BuldogCard').addClass('shadow bg-light');
    });
    $('#MastiffCard').click(function () {
        LimparClasseDosCards();
        $('#MastiffCard').addClass('shadow bg-light');
    });

    $('#CoberturaRT').change(function () { 
        if ($(this)[0].checked) {
            $('#CardGroup').show();
            $('#SkipButton').hide();
        }
        else {
            $('#CardGroup').hide();
            $('#SkipButton').show();
        }
    });

    $('#SkipButton').click(function () {
        window.location.href = '@Url.Action("ExtensaoCobertura", "SeguroClinicaVeterinaria")';
    });

    $('.btn-success').click(function () {
        var botaoId = $(this).attr('id');
        cardSelected = botaoId.split('Button')[1];
        CoberturaRTMandarCookie();
    });
</script>