        SeguroPrincipalSelect(3, 'Profissional II', 'R$ 0,00');
    });
    $('#CotacaoSubmitButton4').click(function () {
        SeguroPrincipalSelect(3, 'Profissional III', 'R$ 0,00');
    });

    function ProtecaoRendaSelect(aceito, faixaIdade, preco) {
        IsSeguroProtecaoSelected = true;
        $('#ProtecaoRendaAceito').val(aceito);
        if (aceito) {
            $('#ProtecaoRendaFaixaIdade').val(faixaIdade);
        }
        $('#ProtecaoRendaCardGroup').hide();
        $('#ProtecaoRendaNome').text((aceito? 'Contratado' : 'Não contratado'));
        $('#ProtecaoRendaPreco').text('R$ ' + (aceito ? preco : '0,00'));
        $('#ProtecaoRendaInfoSelecionado').show();
        $('#ProdutosSelecionadosTabela').show();
        CalcularPreco();

        if (HasFinished()) $('#SubmitButton').show();
        else $('#SubmitButton').hide();
    }

    $('#ProtecaoRendaSubmitButton0').click(function () {
        ProtecaoRendaSelect(false, 0, '0,00');
    });

    $('#ProtecaoRendaSubmitButton1').click(function () {
        ProtecaoRendaSelect(true, 1, '46,90');
    });

    $('#ProtecaoRendaSubmitButton2').click(function () {
        ProtecaoRendaSelect(true, 2, '60,90');
    });
    $('#ProtecaoRendaSubmitButton3').click(function () {
        ProtecaoRendaSelect(true, 3, '64,90');
    });
    $('#ProtecaoRendaSubmitButton4').click(function () {
        ProtecaoRendaSelect(true, 4, '81,90');
    });

    function CalcularPreco() {
        var precoPlanoPrincipal = 0, precoProtecaoRenda = 0;
        switch ($('#PlanoPrincipalId').val()) {
            case '1':
                precoPlanoPrincipal = 23.33;
                break;
            case '2':
                precoPlanoPrincipal = 58.23;
                break;
            case '3':
                precoPlanoPrincipal = 58.23;
                break;
            default:
                precoPlanoPrincipal = 0;
                break;
        }
        if ($('#ProtecaoRendaAceito').val() === 'true') {
            switch ($('#ProtecaoRendaFaixaIdade').val()) {
                case '1':
                    precoProtecaoRenda = 46.90;
                    break;
                case '2':
                    precoProtecaoRenda = 60.90;
                    break;
                case '3':
                    precoProtecaoRenda = 64.90;
                    break;
                case '4':
                    precoProtecaoRenda = 81.90;
                    break;
                default:
                    precoProtecaoRenda = 0;
                    break;
            }
        }

        var data = precoPlanoPrincipal + precoProtecaoRenda;
        $('#_PrecoTotal').text(data.toFixed(2).replace('.', ','));
        $('#PrecoTotal').val(data.toFixed(2).replace('.', ','));
        return data;
    }

    function HasFinished() {
        return IsSeguroPrincipalSelected && IsSeguroProtecaoSelected ? true : false;
    }

    @if (Model.PlanoSeguroProfissionalId.HasValue)
    {
        <text>
    if (@Model.PlanoSeguroProfissionalId == 1) {
        SeguroPrincipalSelect(1, 'Profissional básico', 'R$ 0,00');
    } else if (@Model.PlanoSeguroProfissionalId == 2) {
        SeguroPrincipalSelect(2, 'Profissional I', 'R$ 0,00');
    } else if (@Model.PlanoSeguroProfissionalId == 3) {
        SeguroPrincipalSelect(3, 'Profissional II', 'R$ 0,00');
    } else if (@Model.PlanoSeguroProfissionalId == 4) {
        SeguroPrincipalSelect(3, 'Profissional III', 'R$ 0,00');
    }
        </text>
    }
</script>