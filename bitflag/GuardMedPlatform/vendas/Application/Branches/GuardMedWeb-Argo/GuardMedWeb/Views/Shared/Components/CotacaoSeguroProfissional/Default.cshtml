        $('#planoPrincipalPreco').text(planoPreco);
        $('#SeguroPrincipal').hide();
        $('#PlanoPrincipalnfo').hide();
        $('#ProdutosSelecionadosTabela').show();
        $('#planoClinicaInfoSelecionado').show();
        RemoveIntroInfo();
        CalcularPreco();
        if (!IsSeguroProtecaoSelected) {
            $('#ProtecaoRendaCardGroup').show();
            $('html,body').animate({ scrollTop: 300 }, 'slow');
        }
        if (HasFinished()) $('#SubmitButton').show();
        else $('#SubmitButton').hide();
    }

