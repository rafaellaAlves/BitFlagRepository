    function SalvarCotacao(planoId) {
        $('#PlanoSeguroProfissionalId').val(planoId);
        $('#CotacaoForm').submit();
    }

    function ConsultarCusto() {
        var d = { idade: '@Model.Idade' };
        $.ajax({
            url: '@Url.Action("Consulta", "SeguroProfissional")',
		    type: 'POST',
		    data: d,
            dataType: 'json',
            success: function (data) {
                $('.BasicoPreco').append(data[0].custo);
                $('.BasicoPrecoMensal').append( data[0].custoMensal);
                $('.IPreco').append(data[1].custo);
                $('.IPrecoMensal').append(data[1].custoMensal);
                $('.IIPreco').append(data[2].custo);
                $('.IIPrecoMensal').append(data[2].custoMensal);
                $('.IIIPreco').append(data[3].custo);
                $('.IIIPrecoMensal').append(data[3].custoMensal);
            }
        });
    }

    $('#CardGeral').ready(function () {
        ConsultarCusto();
    });

    function SeguroPrincipalSelect(planoId, planoNome, planoPreco) {
        IsSeguroPrincipalSelected = true;
        $('.text-danger').remove();
        $('#PlanoPrincipalId').val(planoId);
