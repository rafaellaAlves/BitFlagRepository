@model int?
@{
    ViewData["Title"] = "Indicação";
}

<h1 class="mb-2"><small style="font-size:22.4px" id="_IndicationManageCardHeaderTitle">Criação de Indicação</small></h1>
<div class="card">
    <div class="card-body">
        <div id="IndicationViewComponent"></div>
        <hr />
        <a href="@Url.Action("Index","Indication")" class="btn btn-secondary float-left" style="color:white;"><i class="simple-icon-action-undo"></i>&nbsp;Voltar</a>
        <button type="button" id="_IndicationManageButtonSubmit" class="btn btn-success float-right"><i class="simple-icon-cloud-upload"></i>&nbsp;Criar indicação</button>
    </div>
</div>


<script type="text/javascript">
    $('#IndicationViewComponent').load('@Url.Action("IndicationManageComponent", "Indication")', { "id": @if (Model.HasValue) { @Model } else { <text>null</text> } });

    $('#_IndicationManageButtonSubmit').click(function () {
        if (_IndicationManageValidate()) {
            _IndicationManageSave();
        }
    });
</script>
@if (Model.HasValue)
{
    <text>
        <script type="text/javascript">
            $('#_IndicationManageButtonSubmit').html('<i class="simple-icon-cloud-upload"></i>&nbsp;Salvar');
            $('#_IndicationManageCardHeaderTitle').text('Atualização de indicação');
        </script>
    </text>
}
<script type="text/javascript">
    function _IndicationManageCallBack(data) {
         window.location.href = '@Url.Action("Index", "Indication")?id=' + data + '&saved=true';
    }
</script>
