
@inject Services.Subscription.SubscriptionService subscription
@inject Services.Plan.PlanService PlanService
@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Atualização de Plano";
}
@section Styles {
    <style type="text/css">
      
        .form_error {
            color: red;
            display: none;

        }
    </style>
}
<div class="row">
    <div class="col-md-6">
        <div id="menu" class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12 text-center">
                        @await Html.PartialAsync("../Shared/_LayoutMenuHome.cshtml");
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="col-md-6">
    <div class="row">
        <div class="col-12">
            <div class="mb-2">
                <h2>
                    Olá Dr(a). Aqui você pode obter a 2° via do seu certificado ou fazer um upgrade do seu plano.
                </h2>
            </div>
            <hr />
        </div>
    </div>
    @if (Context.Request.Query.ContainsKey("validation") && Context.Request.Query["validation"] == "False")
    {
        <div id="not-found" class="row">
            <div class="col-md-12">
                <div class="alert alert-danger">
                    <b>Não foi possível encontrar seu certificado!</b> Verifique se você possui algum plano ativo disponível.
                </div>
            </div>
        </div>
    }
    <form id="formValidateSubscription" action="@Url.Action(nameof(WEB.Controllers.Subscription.ValidateInfo), nameof(WEB.Controllers.Subscription))" method="post">
        <div class="row">
            <div class="col-md-12">
                <div class="card  card-blue">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-2">
                                    <p>
                                        Digite seus dados ou insira a referência do seu certificado atual.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="control-label">Nome</label>
                                    <input name="FullName" id="FullName" type="text" class="form-control" />
                                    <span class="form_error">Campo obrigatório</span>
                                    <span class="form_error" id="invalid-name">Digite um nome entre 5 e 30 caracteres</span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label">Data de Nascimento</label>
                                    <input name="BirthDate" id="BirthDate" type="text" class="form-control" />
                                    <span class="form_error">Campo obrigatório</span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label">CPF</label>
                                    <input name="Cpf" id="Cpf" type="text" class="form-control" />
                                    <span class="form_error">Campo obrigatório</span>
                                    <span class="form_error" id="invalid-cpf">Digite um CPF válido</span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label ">CRMV</label>
                                    <input name="Crmv" id="Crmv" type="text" class="form-control" />
                                    <span class="form_error">Campo obrigatório</span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label">Referência</label>
                                    <input name="Reference" id="Reference" type="text" class="form-control" />
                                    <span class="form_error">Campo obrigatório</span>
                                    <span class="form_error" id="invalid-ref">A referencia deve conter de 8 a 12 caracteres</span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" id="valid" onclick="return validateForm()" name="valid" class="btn btn-primary">Validar</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
</div>
@section Scripts {
    <script src="~/assets/js/Utils.js"></script>
    <script type="text/javascript">
       
        function validateForm() {
            var name = $('#FullName').val();
            var data = $('#BirthDate').val();
            var crmv = $('#Crmv').val();
            var cpf = $('#Cpf').val();
            var reference = $('#Reference').val();
            var cont = 0;

            if (name != '' && reference == '') {
                //NOME
                if (name == '') {
                    $('#FullName').next().show();
                    $('#invalid-name').hide();
                    focus('#FullName');
                    cont = cont + 1;
                } else if (name.length < 5 || name.length > 30) {
                    $('#invalid-name').show();
                    $('#FullName').next().hide();
                    focus('#FullName');
                    cont = cont + 1;
                } else {
                    forceFocus('#FullName');
                    $('#FullName').next().hide();
                    $('#invalid-name').hide();
                }
                //DATA
                if (data == '') {
                    $('#BirthDate').next().show();
                    focus('#BirthDate');
                    cont = cont + 1;

                } else {
                    forceFocus('#BirthDate');
                    $('#BirthDate').next().hide();
                }

                //CRMV
                if (crmv == '') {
                    $('#Crmv').next().show();
                    focus('#Crmv');
                    cont = cont + 1;

                } else {
                    forceFocus('#Crmv');
                    $('#Crmv').next().hide();
                }

                //CPF
                if (cpf == '') {
                    $('#Cpf').next().show();
                    $('#invalid-cpf').hide();
                    focus('#Cpf');
                    cont = cont + 1;
                } else if (!IsCpf(cpf)) {
                    $('#invalid-cpf').show();
                    $('#Cpf').next().hide();
                    focus('#Cpf');
                    cont = cont + 1;
                } else {
                    forceFocus('#Cpf');
                    $('#Cpf').next().hide();
                    $('#invalid-cpf').hide();
                }
                forceFocus('#Reference');
                $('#Reference').next().hide();
                $('#invalid-ref').hide();

                if (cont == 0) {
                    $('#formValidateSubscription').submit();
                } else {
                    return false;
                }
            } else if (name == '' && reference != '') {
                forceFocus('#FullName');
                $('#FullName').next().hide();
                $('#invalid-name').hide();
                forceFocus('#Crmv');
                $('#Crmv').next().hide();
                forceFocus('#BirthDate');
                $('#BirthDate').next().hide();
                forceFocus('#Cpf');
                $('#Cpf').next().hide();
                $('#invalid-cpf').hide();

                //REFERENCIA
                if (reference == '') {
                    $('#Reference').next().show();
                    $('#invalid-ref').hide();
                    focus('#Reference');
                    cont = cont + 1;
                } else if (reference.length < 8 || reference.length > 12) {
                    $('#invalid-ref').show();
                    $('#Reference').next().hide();
                    focus('#Reference');
                    cont = cont + 1;
                } else {
                    forceFocus('#Reference');
                    $('#Reference').next().hide();
                    $('#invalid-ref').hide();
                }

                if (cont == 0) {
                    $('#formValidateSubscription').submit();
                } else {
                    return false;
                }
            } else {
                //NOME
                if (name == '') {
                    $('#FullName').next().show();
                    $('#invalid-name').hide();
                    focus('#FullName');
                    cont = cont + 1;
                } else if (name.length < 5 || name.length > 30) {
                    $('#invalid-name').show();
                    $('#FullName').next().hide();
                    focus('#FullName');
                    cont = cont + 1;
                } else {
                    forceFocus('#FullName');
                    $('#FullName').next().hide();
                    $('#invalid-name').hide();
                }
                //DATA
                if (data == '') {
                    $('#BirthDate').next().show();
                    focus('#BirthDate');
                    cont = cont + 1;

                } else {                   
                    $('#BirthDate').next().hide();
                    forceFocus('#BirthDate');
                }

                //CRMV
                if (crmv == '') {
                    $('#Crmv').next().show();
                    focus('#Crmv');
                    cont = cont + 1;

                } else {
                    forceFocus('#Crmv');
                    $('#Crmv').next().hide();
                }

                //CPF
                if (cpf == '') {
                    $('#Cpf').next().show();
                    $('#invalid-cpf').hide();
                    focus('#Cpf');
                    cont = cont + 1;
                } else if (!IsCpf(cpf)) {
                    $('#invalid-cpf').show();
                    $('#Cpf').next().hide();
                    focus('#Cpf');
                    cont = cont + 1;
                } else {
                    forceFocus('#Cpf');
                    $('#Cpf').next().hide();
                    $('#invalid-cpf').hide();
                }
                //REFERENCIA
                if (reference == '') {
                    $('#Reference').next().show();
                    $('#invalid-ref').hide();
                    focus('#Reference');
                    cont = cont + 1;
                } else if (reference.length != 12) {
                    $('#invalid-ref').show();
                    $('#Reference').next().hide();
                    focus('#Reference');
                    cont = cont + 1;
                } else {
                    forceFocus('#Reference');
                    $('#reference').next().hide();
                    $('#invalid-ref').hide();
                }

                if (cont == 0) {
                    $('#formValidateSubscription').submit();
                } else {
                    return false;
                }
            }

        }

        $(document).ready(function () {
            //document.getElementById('BirthDate').max = new Date(new Date().getTime() - new Date().getTimezoneOffset() * 60000).toISOString().split("T")[0];
            $('#BirthDate').datepicker({ language: 'pt-BR', autoclose: true });
            $('#BirthDate').mask('99/99/9999');
        });
    </script>

}