@{
    ViewData["Title"] = "Destinadores";
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md form-group">
                <input type="text" class="form-control" placeholder="Pesquisar..." data-toggle="search-datatable" data-target="#recipient-table" />
            </div>
            <div class="col-md-auto col form-group">
                <a href="@Url.Action("Manage", "Recipient")" class="btn btn-primary w-100"><i class="simple-icon-plus"></i>&nbsp;Novo</a>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <div id="RecipientIndexViewComponent">
                    @(await Component.InvokeAsync("RecipientIndex"))
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script asp-paste-key="script-recipient-index"></script>
}