@model List<DTO.Client.ClientViewModel>

<div class="row">
    <div class="col table-responsive">
        <table class="table table-striped table-condensed table-bordered" id="demand-clients-quick-list-table">
            <thead>
                <tr>
                    <td>Código</td>
                    <td>Razão Social/Nome</td>
                    <td>CNPJ/CPF</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a target="_blank" href="@Url.Action("Manage", "Client", new { id = item.ClientId })">@item.ClientId</a>
                        </td>
                        <td>@item.Name</td>
                        <td class="@(item.Document.Length > 11? "cnpj" : "cpf")">@item.Document</td>
                    </tr>
                }
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="3" class="text-center"><i>Nenhum Cliente associado a este MTR de Coleta</i></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>